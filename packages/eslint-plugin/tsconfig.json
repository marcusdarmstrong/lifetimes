{
  "extends": ["@tsconfig/strictest", "@tsconfig/node16"],
  "include": ["*.mts", "package.json"],
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "types": ["node", "eslint"]
  }
}