{
  "extends": ["@tsconfig/strictest", "@tsconfig/node20"],
  "include": ["*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "removeComments": true,
    "types": ["node/async_hooks", "node/test", "node/assert"]
  }
}